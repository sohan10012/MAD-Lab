<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFBFC"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add New Password"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:letterSpacing="0.01"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Securely store your login credentials"
                android:textSize="14sp"
                android:textColor="#7F8C8D"
                android:letterSpacing="0.02" />

        </LinearLayout>

        <!-- Main Card Container -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:strokeColor="#E8EBF0"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="#FFFFFF"
            app:contentPadding="20dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- App / Website Name -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Service"
                    android:textSize="12sp"
                    android:textColor="#5A6C7D"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="6dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="App or Website name"
                    app:hintTextColor="#95A5A6"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="#F8F9FA"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxStrokeColor="#D1D8E0"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:startIconDrawable="@android:drawable/ic_menu_info_details"
                    app:startIconTint="#3498DB"
                    android:layout_marginBottom="18dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etApp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#2C3E50"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Username / Email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textSize="12sp"
                    android:textColor="#5A6C7D"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="6dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username or Email"
                    app:hintTextColor="#95A5A6"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="#F8F9FA"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxStrokeColor="#D1D8E0"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:startIconDrawable="@android:drawable/ic_menu_myplaces"
                    app:startIconTint="#9B59B6"
                    android:layout_marginBottom="18dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#2C3E50"
                        android:inputType="textEmailAddress"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="12sp"
                    android:textColor="#5A6C7D"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="6dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter your password"
                    app:hintTextColor="#95A5A6"
                    app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="#F8F9FA"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxStrokeColor="#D1D8E0"
                    app:boxStrokeWidth="1dp"
                    app:boxStrokeWidthFocused="2dp"
                    app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
                    app:startIconTint="#E74C3C"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#95A5A6">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#2C3E50"
                        android:inputType="textPassword"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Generate Password Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGenerate"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="Generate Secure Password"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:letterSpacing="0.02"
            app:cornerRadius="12dp"
            app:strokeColor="#3498DB"
            app:strokeWidth="1.5dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:textColor="#3498DB"
            app:icon="@android:drawable/ic_menu_rotate"
            app:iconTint="#3498DB"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            android:layout_marginBottom="12dp" />

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="Save Password"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:letterSpacing="0.02"
            app:cornerRadius="12dp"
            android:backgroundTint="#3498DB"
            android:textColor="#FFFFFF"
            app:elevation="0dp"
            app:icon="@android:drawable/ic_menu_save"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />

        <!-- Security Info -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="#F0F8FF">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ”’"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="All passwords are encrypted using AES-256 and stored securely on your device"
                    android:textSize="12sp"
                    android:textColor="#5A6C7D"
                    android:lineSpacingExtra="3dp"
                    android:letterSpacing="0.01" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>